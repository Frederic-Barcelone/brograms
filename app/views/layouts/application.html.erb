<head>
	<meta charset="utf-8" />

	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width" />

	<title>Brograms</title>
  
	<!-- Included CSS Files -->
	<%= stylesheet_link_tag "foundation", "brograms", :media => "all" %>
	<%= csrf_meta_tags %>

	<!--[if lt IE 9]>
		<link rel="stylesheet" href="stylesheets/ie.css">
	<![endif]-->


	<!-- IE Fix for HTML5 Tags -->
	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

</head>
<body>

	<!-- container -->
	<div class="container">
	
	  <!-- Header -->
	 	<header class="row">
			<div class="twelve columns">
			  <%= image_tag 'brograms/header1.png', :class => 'heading' %>
			</div>
		</header>
		<div class="row">
			<div class="twelve columns">
				<div class="well">
					<p class="putcenter">Inspired by Bro Code, Brogram is a special message<br/>
						from one bro to another, delivered by a bro.
					</p>
				</div>
			</div>
		</div>
		
		
		<!-- Video -->
		<div class="row">
			<div class="wrapper">	
				<div class="flex-video"> 
					<iframe src="http://www.youtube.com/embed/w8rbCzhUS5Y" frameborder="0" allowfullscreen></iframe>
				</div>
			</div>
		</div>
		<br />
			
		<!-- Images -->	
		<div class="row">
			<div class="twelve columns">
				<p class="options">Three browesome options to choose from:</p>
			</div>
		</div>
		<div class="row">
			<div class="four columns">
				<p><%= image_tag 'brograms/hifive.png' %></p>	
			</div>
			<div class="four columns">
				<p><%= image_tag 'brograms/icebox.png' %></p>	
			</div>
			<div class="four columns">
				<p><%= image_tag 'brograms/lovebox.png' %></p>
			</div>
		</div>

		<!-- Web Form -->
		
		<div class="row">
			<div class="twelve columns">
				<form class="nice custom well bottom" action="confirmation.html" id="sendBrogram">
			  		<h3 class="send">Send a Brogram!</h3>
					<div class="row">
				   		<div class="six columns">
							<p>  
								<label for="yourname"></label>  
								<input class="input-text expand" type="text" name="yourname" id="yourname" placeholder="Your Name"/> 
				    		</p> 
		    		</div> 
		    	   		<div class="six columns">
				    		<p class="input-text">  
				    			<label for="youremail"></label>  
								<input class="input-text expand" type="text" name="youremail" id="youremail" placeholder="Your Email" /> 
				    		</p> 
		    	   		</div>
		    	  	</div>
		    	  	<div class="row">
			    		<p class="choice">Send my bro this brogram:</p> 
			    		<ul class="type-of-brogram">
			    			<li class="mini-hf"><label for="five"><input type="radio" name="type" id="five" style="display: none;" /><span class="custom radio selected"></span></label></li>
			    			<li class="mini-ic"><label for="ice"><input type="radio" name="type" id="five" style="display: none;" /><span class="custom radio"></span></label></li>
			    			<li class="mini-lb"><label for="romance"><input type="radio" name="type" id="five" style="display: none;" /><span class="custom radio"></span></label></li>
			    		</ul>
		    		</div>
		    		<div class="row">
				   		<div class="six columns">
				    		<p>  
				    			<label for="broname"></label>  
								<input class="input-text expand" type="text" name="broname" id="broname" placeholder="Bro's Name" /> 
				    		</p> 
				    	</div>
				    	<div class="six columns">
				    		<p>  
				    			<label for="broname"></label>  
								<input class="input-text expand" type="text" name="broemail" id="broemail" placeholder="Bro's Email" /> 
				    		</p>
				    	</div>
				    </div>
				    <div class="row">
				    	<div class="six columns">
				    		<p>  
								<label for="address"></label> 
								<input class="input-text expand" type="text" name="address" id="address" placeholder="Bro's Address" /> 
				    		</p>
				    	</div>
				    	<div class="four columns">
								<label for="city"></label> 
								<input type="text" class="expand small input-text" name="city" id="city" placeholder="City" /> 
				    		
				    	</div>
				    	<div class="two columns"> 
								<label for="zipcode"></label> 
								<input type="text" class="expand small input-text" name="zipcode" id="zipcode" placeholder="Zip Code" />  
				    	</div>
		    		</div>
		    		<p> 
		    			<label for="time">Time</label>  
		    			<select id="brogramTime">
							<option>This is a dropdown</option>
							<option>This is another option</option>
							<option>Look, a third option</option>
						</select>
		    		</p>
		    		<p class="submit">  
		    			<input type="submit" id="submitBrogram" /> 
		        		<!--<input class="large nice radius button" type="submit" value="Submit" /> --> 
		    		</p> 
		    		
		    		<hr />
				</form>	
			</div>	
	     </div>
	     
	     <!-- Footer -->	
	   <div class="row">
			<div class="twelve columns">
				<p class="red">MADE BY <a href="http://www.zurb.com"> <%= image_tag 'brograms/logo.png' %></a></p>
			</div>
	   </div>
	<!-- container -->




	<!-- Included JS Files -->
	<%= javascript_include_tag "jquery", "foundation" %>

</body>
</html>
